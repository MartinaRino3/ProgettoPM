<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- ðŸ”¹ Barra superiore con freccia e logout -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backArrowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/beige"
            android:src="@drawable/indietro"
            android:contentDescription="Torna indietro"
            android:padding="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/logoutArrowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/beige"
            android:src="@drawable/logout"
            android:contentDescription="Logout"
            android:padding="8dp" />
    </LinearLayout>

    <!-- ðŸ”¹ Campi profilo -->
    <EditText
        android:id="@+id/editTextName"
        android:hint="Nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextSurname"
        android:hint="Cognome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:hint="Username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextSurname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/saveButton"
        android:text="Salva modifiche profilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editTextUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/botton_forma"
        android:backgroundTint="@color/beige"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:cornerRadius="24dp"/>

    <!-- ðŸ”¹ Bottoni in fondo -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/changeEmailButton"
            android:text="Cambia email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_forma"
            android:backgroundTint="@color/beige"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/changePasswordButton"
            android:text="Cambia password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botton_forma"
            android:backgroundTint="@color/beige"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            app:cornerRadius="24dp" />

        <Button
            android:id="@+id/deleteAccountButton"
            android:text="Elimina account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
