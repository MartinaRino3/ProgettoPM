<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Titolo -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiungi un nuovo capo al tuo guardaroba"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/beige"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Campo nome -->
        <EditText
            android:id="@+id/nomeCapo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome del capo"
            android:backgroundTint="@color/beige"
            android:textColor="@color/beige"
            android:textColorHint="@color/beige"
            android:textSize="16sp"
            android:padding="12dp"
            android:drawablePadding="10dp" />

        <!-- Spinner Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle">

            <Spinner
                android:id="@+id/categoria"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp" />

            <Spinner
                android:id="@+id/taglia"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp" />

            <Spinner
                android:id="@+id/marca"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp" />

            <Spinner
                android:id="@+id/colore"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp" />

            <Spinner
                android:id="@+id/materiale"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp" />

            <Spinner
                android:id="@+id/stagione"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp" />
        </LinearLayout>

        <!-- Immagine -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/image"
            android:scaleType="centerCrop"
            android:background="#DAA09F9F"
            android:elevation="4dp" />

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Seleziona immagine"
            android:backgroundTint="@color/beige"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp" />

        <!-- Pulsante finale -->
        <Button
            android:id="@+id/buttonAggiungi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Aggiungi Capo"
            android:backgroundTint="@color/beige"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:elevation="6dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
